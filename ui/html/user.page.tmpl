{{template "base" .}}

{{define "title"}}Profile{{end}}

{{define "main"}}

    <h1>User Profile</h1>

    {{with .User}}

    <table>
        <tr>
            <th>Name</th>
            <td>{{.Name}}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{.Email}}</td>
        </tr>
        <tr>
            <th>Joined</th>
            <td>{{humanDate .Create}}</td>
        </tr>
    </table>
    {{end}}
{{end}}